include aside-section.pug
div(class="container pt-md-4 pb-md-4 h-100 bg-md-gray")
  div(class="row no-gutters h-100 radius-md bg-white overflow-md-hidden")
    aside(class="d-flex flex-column align-items-normal flex-grow-1 col-md-7 col-lg-6 col-xl-4 h-100 overflow-hidden mx-n4 mx-md-0")
      include header.pug
      div(class="d-flex flex-column align-items-normal tab-content px-4 overflow-hidden")
        +aside-section("contacts")
          include contacts.pug
        +aside-section("chats")
          include chats.pug
        +aside-section("profile")
          include profile.pug
        if page == "chat"
          div(class="tab-pane fade flex-column" id="chat" role="tabpanel" aria-labelledby="chat-tab")
            div(class="d-flex flex-column justify-content-normal align-items-normal h-100 overflow-hidden mt-md-0 d-md-none")
              include messages.pug
    - const extraClass = page == "index" ? "justify-content-center" : "justify-content-normal align-items-normal"
    main(class= `col-md d-md-flex flex-column h-100 overflow-hidden ${extraClass}`)
      if page == "index"
        include greeting.pug
      else 
        include messages.pug
