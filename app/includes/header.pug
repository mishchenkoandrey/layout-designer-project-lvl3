header(class="pt-3 px-4 pb-3")
  nav(class="d-flex")
    a(href="")
      img(alt="Hexlet" src="images/sprite.svg#logo" class="logo")
    -
      var tabs = {
        "contacts": {
          img: "people",
          text: "Контакты",
          selected: page=="index",
          href: page=="index" ? "#contacts" : "index.html#contacts",
          toggle: page=="index" ? "tab" : false,
        },
        "chats": {
          img: "chat",
          text: "Сообщения",
          selected: page=="chat",
          href: page=="chat" ? "#chats" : "chat.html#chats",
          toggle: page=="chat" ? "tab" : false,
        },
        "profile": {
          img: "person",
          text: "Профиль",
          selected: false,
          href: "#profile",
          toggle: "tab",
        },
      }
    ul(class="nav d-flex cg-6 cg-md-5" id="myTab" role="tablist")
      if page=="chat"
        li(role="presentation" class="d-block d-md-none")
          a(class="d-md-flex cg-2 color-light fs-0 small-md" id="chat-tab" href="#chat" role="tab" data-toggle="tab")
            svg(xmlns="http://www.w3.org/2000/svg" width="25" height="24" fill="currentColor" class="bi bi-chat-left-text" viewBox="0 0 16 16")
              path(d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z")
              path(d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z")
            | Чат
      each content, tab in tabs
        li(role="presentation")
          a(class="d-md-flex cg-2 color-light fs-0 small-md" id=`${tab}-tab` data-toggle=content.toggle href=content.href role="tab")
            img(alt=content.text src=`images/sprite.svg#${content.img}` class="nav-img")
            = content.text
